def print_pattern(n):
    for i in range(1, n + 1):
        # Print spaces
        for _ in range(n - i):
            print(" ", end=" ")
        
        # Print numbers
        for j in range(1, i + 1):
            print(j, end=" ")
        
        print()  # Move to the next line

# Example usage with n = 4
n = 4
print_pattern(n)
